{
    "meta": {
        "extract_noun_chunks": true,
        "how_many_matches": "one"
    },
    "patterns": [
        {
            "rulename": "indefinite",
            "tokens": [
                { "POS": "DET", "LOWER": { "IN": ["a", "an"] } },
                { "OP": "*" },
                { "POS": { "IN": ["NOUN", "PRON", "PROPN"] } }
            ]
        },
        {
            "rulename": "definite",
            "tokens": [
                { "POS": "DET", "LOWER": "the" },
                { "OP": "*" },
                { "POS": { "IN": ["NOUN", "PRON", "PROPN"] } }
            ]
        },
        {
            "rulename": "other",
            "tokens": [
                { "POS": "DET", "LOWER": { "NOT_IN": ["a", "an", "the"] } },
                { "OP": "*" },
                { "POS": { "IN": ["NOUN", "PRON", "PROPN"] } }
            ]
        },
        {
            "rulename": "none",
            "tokens": [
                { "POS": { "NOT_IN": ["DET"] }, "OP": "?" },
                { "POS": { "IN": ["NOUN", "PRON", "PROPN"] } }
            ]
        }
    ],
    "tests": [
        {
            "input": "the book",
            "rulenames": ["definite"],
            "spans": ["the"]
        },
        {
            "input": "the green book",
            "rulenames": ["definite"],
            "spans": ["the"]
        },
        {
            "input": "the incredibly green book",
            "rulenames": ["definite"],
            "spans": ["the"]
        },
        {
            "input": "the book that was on a shelf",
            "rulenames": ["definite"],
            "spans": ["the"]
        },
        {
            "input": "a book",
            "rulenames": ["indefinite"],
            "spans": ["a"]
        },
        {
            "input": "a green book",
            "rulenames": ["indefinite"],
            "spans": ["a"]
        },
        {
            "input": "a hideously green book",
            "rulenames": ["indefinite"],
            "spans": ["a"]
        },
        {
            "input": "a book that was on the shelf",
            "rulenames": ["indefinite"],
            "spans": ["a"]
        },
        {
            "input": "an apple",
            "rulenames": ["indefinite"],
            "spans": ["an"]
        },
        {
            "input": "an ugly apple",
            "rulenames": ["indefinite"],
            "spans": ["an"]
        },
        {
            "input": "an incredibly green apple",
            "rulenames": ["indefinite"],
            "spans": ["an"]
        },
        {
            "input": "an apple that was on a shelf",
            "rulenames": ["indefinite", "indefinite"],
            "spans": ["an", "a"]
        },
        {
            "input": "apple",
            "rulenames": ["none"]
        },
        {
            "input": "ugly apple",
            "rulenames": ["none"]
        },
        {
            "input": "incredibly green apple",
            "rulenames": ["none"]
        },
        {
            "input": "apple that was on a shelf",
            "rulenames": ["none", "indefinite"]
        }
    ]
}
